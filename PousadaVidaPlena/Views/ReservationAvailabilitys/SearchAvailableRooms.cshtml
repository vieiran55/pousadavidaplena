@model IEnumerable<PousadaVidaPlena.Models.Room>

@{
    ViewData["Title"] = "Available Rooms";
}

@{
    ViewData["Title"] = "Available Rooms";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SearchAvailableRooms" method="post">
    <div class="form-group">
        <label for="checkInDate">Check-In Date</label>
        <input type="date" name="checkInDate" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="checkOutDate">Check-Out Date</label>
        <input type="date" name="checkOutDate" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model != null && Model.Any())
{
    <h3>Available Rooms: @ViewData["CheckInDate"] to @ViewData["CheckOutDate"]</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Room Type</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.RoomNumber</td>
                    <td>@room.Type</td>
                    <!-- Add more cells as needed -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No available rooms for the selected dates.</p>
}